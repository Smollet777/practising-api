{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": ["angular-tslint-rules"],
  "rules": {
    "deprecation": {
      "severity": "warn"
    },
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "label-position": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "object-literal-sort-keys": false,
    "i18n": [
      true,
      "check-id"
    ]
  }
}
